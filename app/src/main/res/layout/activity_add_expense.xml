<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpenseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Despesa"
            android:textSize="80px"
            android:layout_marginStart="50px"
            android:layout_marginTop="100px"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/edt_nome_despesa" />

        <EditText
            android:id="@+id/edt_nome_despesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add o nome da despesa"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="80px"
            android:layout_marginStart="50px"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/edt_nome_despesa" />

        <EditText
            android:id="@+id/edt_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add o valor"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="80px"
            android:layout_marginStart="50px"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/edt_nome_despesa" />

        <EditText
            android:id="@+id/edt_nome_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a categoria"
            android:layout_marginBottom="100px"
            app:layout_constraintTop_toBottomOf="@+id/edt_nome_valor" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>